<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.hire.recyclerview.HomeFragment"
        android:label="fragment_blank"
        tools:layout="@layout/activity_fab_for_employee_list" >
        <action
            android:id="@+id/action_homeFragment_to_employeeProfile"
            app:destination="@id/employeeProfile"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"/>
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.hire.frgaments.EmployerProfileFragment"
        android:label="activity_fab_for_extacted"
        tools:layout="@layout/fragment_profile">
    </fragment>

    <fragment
        android:id="@+id/historyFragment"
        android:name="com.example.hire.frgaments.HistoryFragment"
        android:label="activity_fab_for_extacted"
        tools:layout="@layout/fragment_history">
    </fragment>

    <fragment
        android:id="@+id/employeeProfile"
        android:name="com.example.hire.frgaments.EmployeeProfileFragment"
        android:label="fragment_blank"
        tools:layout="@layout/activity_employee_profile" >
    </fragment>

</navigation>