<?xml version="1.0" encoding="utf-8"?>

        <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/background_extracted_text">

    <TextView
        android:id="@+id/textViewTitleHomeCustomDialog"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/darkSlateGrey"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/recruit_option"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonHomeCustomDialogAI"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ai_logo"
        android:drawableTint="@color/colorPrimaryDark"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/textViewTitleHomeCustomDialog"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitleHomeCustomDialog" />

    <TextView
        android:id="@+id/textViewHomeCustomDialogAI"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/ai_recruit"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/buttonHomeCustomDialogAI"
        app:layout_constraintStart_toStartOf="@+id/buttonHomeCustomDialogAI"
        app:layout_constraintTop_toBottomOf="@+id/buttonHomeCustomDialogAI" />

    <Button
        android:id="@+id/buttonHomeCustomDialogManual"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/buttonHomeCustomDialogAI"
        android:layout_marginStart="32dp"
        android:background="@drawable/manual_form"
        android:backgroundTint="@color/darkSlateGrey"
        app:layout_constraintBottom_toBottomOf="@+id/buttonHomeCustomDialogAI"
        app:layout_constraintEnd_toEndOf="@+id/textViewTitleHomeCustomDialog"
        app:layout_constraintStart_toEndOf="@+id/buttonHomeCustomDialogAI"
        app:layout_constraintTop_toTopOf="@+id/buttonHomeCustomDialogAI" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/manual"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="@+id/textViewHomeCustomDialogAI"
        app:layout_constraintEnd_toEndOf="@+id/buttonHomeCustomDialogManual"
        app:layout_constraintStart_toStartOf="@+id/buttonHomeCustomDialogManual"
        app:layout_constraintTop_toTopOf="@+id/textViewHomeCustomDialogAI" />


        </androidx.constraintlayout.widget.ConstraintLayout>

