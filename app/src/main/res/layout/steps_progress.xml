<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewDot5"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/circle_text_view"
        android:gravity="center"
        android:textColorLink="#E91E63"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewDot4"
        app:layout_constraintStart_toEndOf="@+id/textViewDot4"
        app:layout_constraintTop_toTopOf="@+id/textViewDot4"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textViewDot4"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/circle_text_view"
        android:gravity="center"
        android:textColorLink="#E91E63"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewStep2"
        app:layout_constraintStart_toEndOf="@+id/textViewStep2"
        app:layout_constraintTop_toTopOf="@+id/textViewStep2" />

    <TextView
        android:id="@+id/textViewStep3"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/circle_text_view"
        android:gravity="center"
        android:text="3"
        android:textColor="#FFFFFF"
        android:textColorLink="#E91E63"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewDot6"
        app:layout_constraintStart_toEndOf="@+id/textViewDot6"
        app:layout_constraintTop_toTopOf="@+id/textViewDot6" />

    <TextView
        android:id="@+id/textViewDot6"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/circle_text_view"
        android:gravity="center"
        android:textColorLink="#E91E63"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewDot5"
        app:layout_constraintStart_toEndOf="@+id/textViewDot5"
        app:layout_constraintTop_toTopOf="@+id/textViewDot5"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textViewStep1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/circle_text_view"
        android:backgroundTint="@color/green"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="1"
        android:textColor="#FFFFFF"
        android:textColorLink="#E91E63"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewDot1"
        app:layout_constraintEnd_toStartOf="@+id/textViewDot1"
        app:layout_constraintTop_toTopOf="@+id/textViewDot1" />

    <TextView
        android:id="@+id/textViewStep2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/circle_text_view"
        android:gravity="center"
        android:text="2"
        android:textColor="#FFFFFF"
        android:textColorLink="#E91E63"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewTitleSteps"
        app:layout_constraintStart_toStartOf="@+id/textViewTitleSteps"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitleSteps" />

    <TextView
        android:id="@+id/textViewDot1"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/circle_text_view"
        android:gravity="center"
        android:textColorLink="#E91E63"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewDot2"
        app:layout_constraintEnd_toStartOf="@+id/textViewDot2"
        app:layout_constraintTop_toTopOf="@+id/textViewDot2" />

    <TextView
        android:id="@+id/textViewDot2"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/circle_text_view"
        android:gravity="center"
        android:textColorLink="#E91E63"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewDot3"
        app:layout_constraintEnd_toStartOf="@+id/textViewDot3"
        app:layout_constraintTop_toTopOf="@+id/textViewDot3"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textViewDot3"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/circle_text_view"
        android:gravity="center"
        android:textColorLink="#E91E63"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewStep2"
        app:layout_constraintEnd_toStartOf="@+id/textViewStep2"
        app:layout_constraintTop_toTopOf="@+id/textViewStep2" />

    <TextView
        android:id="@+id/textViewTitleSteps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Your Progress"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewStep1Des"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Upload Your Resume"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewStep1"
        app:layout_constraintStart_toStartOf="@+id/textViewStep1"
        app:layout_constraintTop_toBottomOf="@+id/textViewStep1" />

    <TextView
        android:id="@+id/textViewStep2Des"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Extract Your Resume"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewStep2"
        app:layout_constraintStart_toStartOf="@+id/textViewStep2"
        app:layout_constraintTop_toBottomOf="@+id/textViewStep2" />

    <TextView
        android:id="@+id/textViewStep3Des"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Upload Your Employee"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewStep3"
        app:layout_constraintStart_toEndOf="@+id/textViewDot6"
        app:layout_constraintTop_toBottomOf="@+id/textViewStep3" />
</androidx.constraintlayout.widget.ConstraintLayout>