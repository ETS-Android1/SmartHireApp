<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewHolderSkillsPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/one"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewHolderSkillsSkills"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="start"
        android:text="@string/java"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewHolderSkillsPosition"
        app:layout_constraintEnd_toStartOf="@+id/textViewHolderSkillsLevel"
        app:layout_constraintStart_toEndOf="@+id/textViewHolderSkillsPosition"
        app:layout_constraintTop_toTopOf="@+id/textViewHolderSkillsPosition" />

    <TextView
        android:id="@+id/textViewHolderSkillsLevel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="@string/beginer"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewHolderSkillsSkills"
        app:layout_constraintEnd_toStartOf="@+id/buttonHolderSkillsDelete"
        app:layout_constraintTop_toTopOf="@+id/textViewHolderSkillsSkills" />

    <Button
        android:id="@+id/buttonHolderSkillsDelete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/circle_text_view"
        android:text="X"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewHolderSkillsLevel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewHolderSkillsLevel" />
</androidx.constraintlayout.widget.ConstraintLayout>